erDiagram
    USERS {
        id TEXT PK
        first_name TEXT
        last_name TEXT
        email TEXT UNIQUE
        password TEXT
        is_admin BOOLEAN
        created_at TEXT
        updated_at TEXT
    }

    PLACES {
        id TEXT PK
        title TEXT
        description TEXT
        price REAL
        latitude REAL
        longitude REAL
        owner_id TEXT FK
        created_at TEXT
        updated_at TEXT
    }

    REVIEWS {
        id TEXT PK
        text TEXT
        rating INTEGER
        place_id TEXT FK
        user_id TEXT FK
        created_at TEXT
        updated_at TEXT
    }

    AMENITIES {
        id TEXT PK
        name TEXT
        created_at TEXT
        updated_at TEXT
    }

    PLACE_AMENITY {
        place_id TEXT PK FK
        amenity_id TEXT PK FK
    }

    USERS ||--o{ PLACES : owns
    USERS ||--o{ REVIEWS : writes
    PLACES ||--o{ REVIEWS : has
    PLACES ||--o{ PLACE_AMENITY : includes
    AMENITIES ||--o{ PLACE_AMENITY : available_in
